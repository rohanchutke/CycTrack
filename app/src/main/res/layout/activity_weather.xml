<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".WeatherActivity">

    <TextView
        android:id="@+id/tv_title_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rajdhani"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Hey, Riders!?"
        android:textColor="@color/ui_element_color"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_weather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        android:fontFamily="@font/rajdhani"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Loading..."
        android:textColor="@color/ui_element_color"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/rajdhani"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Temperature"
        android:textColor="@color/ui_element_color"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCelsius"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rajdhani"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Forecast"
        android:textColor="@color/ui_element_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDescription"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/rajdhani"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Humidity"
        android:textColor="@color/ui_element_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/txtHumidity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rajdhani"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_settext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_feedback"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/rajdhani"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Prediction"
        android:textColor="@color/ui_element_color"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_maps1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_aboutus"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/tv_for_centre"
        android:background="@drawable/button_selector2"
        android:fontFamily="@font/rajdhani"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:text="Start Ride"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_for_centre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_aboutus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="."
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_aboutus"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/tv_for_centre"
        android:background="@drawable/button_selector2"
        android:fontFamily="@font/rajdhani"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:text="Feedbacks"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/rajdhani"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="About Us"
        android:textColor="@color/ui_element_color"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>